# Env vars
export PATH=$HOME/.local/bin:$PATH
export _JAVA_AWT_WM_NONREPARENTING=1
export QT_STYLE_OVERRIDE=kvantum
export JAVA_HOME=/usr/lib/jvm/java-11-openjdk/
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/usr/lib/jvm/java-11-openjdk/lib/server/

# Screens
hdmi=`xrandr | grep ' connected' | grep 'HDMI' | awk '{print $1}'`

if [ "$hdmi" = "HDMI-1" ]; then
  xrandr --output eDP-1 --primary --mode 1366x768 --pos 276x1080 --output HDMI-1 --mode 1920x1080 --pos 0x0 &
else
  xrandr --output eDP-1 --primary --mode 1366x768 --pos 0x0 --rotate normal --output HDMI-1 --off --output DP-1 --off &
fi

# Composer
picom -b --config ~/picom.conf &
# Network
nm-applet &
# Bluetooth
blueman-applet &
# Keyboard Layout
setxkbmap latam &
# Battery
cbatticon &
# Volume
volumeicon &
# Automount Devices
udiskie -t &
# Wallpaper
nitrogen --restore &
# Overlay Bar
xob-pulse-py | xob -s pulse &
xob-brightness-py | xob -s brightness &
